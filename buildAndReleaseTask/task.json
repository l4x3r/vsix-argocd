{
    "$schema": "https://raw.githubusercontent.com/Microsoft/azure-pipelines-task-lib/master/tasks.schema.json",
    "id": "bd21f478-3d95-4f48-ae21-7fd1fc8dd22e",
    "name": "vsix-argocd",
    "friendlyName": "Argo CD Extension",
    "description": "Provides support for extending Azure DevOps pipelines with Argo CD integration.",
    "helpMarkDown": "",
    "category": "Utility",
    "visibility": [
        "Build",
        "Release"
    ],
    "author": "Tomas Mortensen - Statistics Sweden",
    "version": {
        "Major": 0,
        "Minor": 1,
        "Patch": 0
    },
    "instanceNameFormat": "Argo CD Task $(project)",
    "inputs": [
        {
            "name": "samplestring",
            "type": "string",
            "label": "Sample String",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "A sample string"
        },
        {
            "name": "ArgoCDService",
            "type": "connectedService:argocd",
            "label": "Argo CD server endpoint",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Select the Argo CD endpoint to use. If needed, selecton 'manage', and add a new service endpoint of type 'Argo CD server connection'"
        },
        {
            "name": "application",
            "type": "pickList",
            "label": "Argo CD Application",
            "required": true,
            "helpMarkDown": "Select the name of the Argo CD application to perform task on.",
            "properties": {
                "EditableOptions": "True"
            }
        }
    ],
    "dataSourceBindings": [
        {
            "target": "application",
            "endpointId": "$(ArgoCDService)",
            "dataSourceName": "Argo CD Applications"
        }
    ],
    "execution": {
        "Node10": {
            "target": "index.js"
        }
    }
}